<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_sd"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        android:drawableLeft="@drawable/lineway"
        android:drawablePadding="@dimen/px20"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/px20"
        android:paddingLeft="15dp"
        android:paddingTop="@dimen/px30"
        android:text="运输路线"
        android:textColor="@color/black_sd1"
        android:textSize="14dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px25"
        android:layout_marginLeft="@dimen/px25"
        android:layout_marginRight="@dimen/px25"
        android:background="@drawable/bg_coners_gray2"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/px20"
        android:paddingTop="@dimen/px20">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/px30"
            android:paddingRight="@dimen/px22"
            android:src="@drawable/becircle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="110dp"
            android:orientation="vertical"
            android:paddingRight="@dimen/px42">

            <TextView
                android:id="@+id/tv_start_address"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/px20"
                android:text=""
                android:textColor="@color/black_sd1"
                android:textSize="@dimen/px32" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_sd" />

            <TextView
                android:id="@+id/tv_end_address"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingTop="@dimen/px20"
                android:text=""
                android:textColor="@color/black_sd1"
                android:textSize="@dimen/px32" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
