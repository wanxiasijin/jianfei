<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="@dimen/px30"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rectange_white"
        android:gravity="center"
        android:paddingBottom="@dimen/px4"
        android:paddingLeft="@dimen/px6"
        android:paddingRight="@dimen/px6"
        android:paddingTop="@dimen/px4"
        android:text="@string/statis_tip"
        android:textColor="@color/black_sd1"
        android:textSize="12dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="-2dp"
        android:paddingRight="@dimen/px60"
        android:src="@drawable/trangledown" />

</LinearLayout>
