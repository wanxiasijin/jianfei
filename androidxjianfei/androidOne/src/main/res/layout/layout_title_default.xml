<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/rl_all"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/bg_theme"
        >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/tv_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="aa"
            android:textColor="@color/white"
            android:textSize="@dimen/text_18"
            />

    </FrameLayout>
    <ImageView
        android:id="@+id/iv_title_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingLeft="20dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:src="@drawable/btn_create_topic_selector"
        />



    <ImageView
        android:id="@+id/iv_title_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
       android:paddingLeft="15dp"
        android:paddingRight="20dp"
        android:src="@drawable/btn_back_selector"
        android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_number_plate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:enabled="true"
            android:visibility="gone"
            android:clickable="true"
            android:layout_marginLeft="15dp"
            android:textColor="@color/bg_theme"
            android:background="@drawable/btn_lock_selector"/>
    </RelativeLayout>


</LinearLayout>