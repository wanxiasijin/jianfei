<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_sd"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/px60">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/px30"
                android:drawableRight="@drawable/arrowdown"
                android:inputType="text"
                android:paddingBottom="@dimen/px30"
                android:paddingLeft="@dimen/px36"
                android:paddingTop="@dimen/px30"
                android:text=""
                android:textColor="@color/black_sd1"
                android:textSize="14dp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="26dp"
                android:layout_margin="@dimen/px20"
                android:layout_marginTop="@dimen/px40"
                android:background="@color/gray_sd" />

        </LinearLayout>

        <com.chenganrt.smartSupervision.business.electronic.ui.EditTextDel
            android:id="@+id/ed_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="输入终点"
            android:inputType="text"
            android:paddingBottom="@dimen/px20"
            android:paddingLeft="@dimen/px36"
            android:paddingRight="@dimen/px20"
            android:paddingTop="@dimen/px20"
            android:textColor="@color/black_sd1"
            android:textColorHint="@color/black_sd2"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/px26"
            android:text="取消"
            android:textColor="@color/green_theam"
            android:textSize="14dp" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/px20"
        android:background="@color/white_sd" />

</LinearLayout>
