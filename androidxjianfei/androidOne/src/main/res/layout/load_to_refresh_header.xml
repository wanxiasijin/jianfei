<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@color/refresh_header"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_pull_arrow"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/pull_refresh"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/img_release_arrow"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/release_refresh"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/img_load_success"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/refresh_success"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/progress_listview_load_more"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/uc_txt_listview_load_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="6dp"
        android:clickable="true"
        android:textColor="#66000000"
        android:textSize="12dp" />
</LinearLayout>