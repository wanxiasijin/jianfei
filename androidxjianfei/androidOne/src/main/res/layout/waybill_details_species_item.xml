<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_waste_types"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/waste_types"
            android:layout_marginTop="16dp"
            android:textColor="@color/text_50"
            android:textSize="@dimen/text_16"/>

        <TextView
            android:id="@+id/tv_loading_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_16"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/text_50"
            android:text="@string/loading_amount"/>

    </LinearLayout>


    <TextView
        android:id="@+id/tv_number_plate2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_3384d5"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="25dp"
        android:textStyle="bold"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/text_18"
        />



</RelativeLayout>
