<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_coners_white"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="@dimen/px88">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/px55"
        android:paddingLeft="@dimen/px50"
        android:paddingRight="@dimen/px50"
        android:textColor="@color/black_sd1"
        android:textSize="16dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/px55"
        android:paddingLeft="@dimen/px50"
        android:paddingRight="@dimen/px50"
        android:textColor="@color/black_sd2"
        android:textSize="14dp"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_sd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/px36"
            android:text="取消"
            android:textColor="@color/blue_sd"
            android:textSize="16dp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/gray_sd" />

        <TextView
            android:id="@+id/sure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/px36"
            android:text="确定"
            android:textColor="@color/blue_sd"
            android:textSize="16dp" />

    </LinearLayout>
</LinearLayout>
