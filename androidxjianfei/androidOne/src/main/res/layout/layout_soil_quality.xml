<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_except"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_sd"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/px30"
        android:paddingTop="@dimen/px30">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawableLeft="@drawable/except"
            android:drawablePadding="@dimen/px20"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="@string/soil_except"
            android:textColor="@color/black_sd1"
            android:textSize="15dp" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px20"
            android:button="@drawable/checkbox_soil"
            android:checked="false"
            android:paddingRight="@dimen/px40"
            android:textSize="@dimen/text_15" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_except_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px2"
            android:background="@color/white_sd"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/px30"
            android:paddingTop="@dimen/px30">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="@string/soil_except_type"
                android:textColor="@color/black_sd1"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_except_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/except_type_select"
                android:paddingLeft="30dp"
                android:singleLine="true"
                android:textColor="@color/black_sd1"
                android:textColorHint="@color/black_sd2"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_except_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/px20"
                android:drawableLeft="@drawable/arrowdown"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="@dimen/px40"
                android:textColor="@color/black_sd2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px2"
            android:background="@color/white_sd"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/px30"
            android:paddingTop="@dimen/px30">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="@string/soil_photo_upload"
                android:textColor="@color/black_sd1"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="26dp"
                android:singleLine="true"
                android:text="@string/soil_photo_tip"
                android:textColor="@color/black_sd2"
                android:textSize="13dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px2"
            android:background="@color/white_sd"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/px4"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="@dimen/px40">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="@dimen/px10"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/camera_soil"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/px12"
                    android:layout_marginRight="@dimen/px12"
                    android:background="@color/gray_sd"
                    android:src="@drawable/camera" />

                <TextView
                    android:id="@+id/soil_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/red_round"
                    android:gravity="center"
                    android:paddingBottom="@dimen/px4"
                    android:paddingLeft="@dimen/px14"
                    android:paddingRight="@dimen/px14"
                    android:paddingTop="@dimen/px4"
                    android:textColor="@color/white_sd"
                    android:textSize="10dp"
                    android:visibility="gone" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="@dimen/px10"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/camera_vehicle"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/px6"
                    android:layout_marginRight="@dimen/px6"
                    android:background="@color/gray_sd"
                    android:src="@drawable/camera" />

                <TextView
                    android:id="@+id/vehicle_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/red_round"
                    android:gravity="center"
                    android:paddingBottom="@dimen/px4"
                    android:paddingLeft="@dimen/px14"
                    android:paddingRight="@dimen/px14"
                    android:paddingTop="@dimen/px4"
                    android:textColor="@color/white_sd"
                    android:textSize="10dp"
                    android:visibility="gone" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="@dimen/px10"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/camera_driver"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/px6"
                    android:layout_marginRight="@dimen/px6"
                    android:background="@color/gray_sd"
                    android:src="@drawable/camera" />

                <TextView
                    android:id="@+id/driver_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/red_round"
                    android:gravity="center"
                    android:paddingBottom="@dimen/px4"
                    android:paddingLeft="@dimen/px14"
                    android:paddingRight="@dimen/px14"
                    android:paddingTop="@dimen/px4"
                    android:textColor="@color/white_sd"
                    android:textSize="10dp"
                    android:visibility="gone" />

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_sd"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/px30"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/photo_soil"
                android:textColor="@color/black_sd4"
                android:textSize="@dimen/px35" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/photo_vehicle"
                android:textColor="@color/black_sd4"
                android:textSize="@dimen/px35" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/photo_driver"
                android:textColor="@color/black_sd4"
                android:textSize="@dimen/px35" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_sd"
            android:paddingBottom="@dimen/px30"
            android:paddingLeft="15dp"
            android:text="@string/soil_save_tip"
            android:textColor="@color/red_sd2"
            android:textSize="@dimen/px35" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px2"
            android:background="@color/white_sd"
            android:paddingBottom="@dimen/px30"
            android:paddingLeft="15dp"
            android:paddingTop="@dimen/px30"
            android:text="@string/mark"
            android:textColor="@color/black_sd1"
            android:textSize="@dimen/px35" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_sd"
            android:orientation="vertical"
            android:paddingBottom="@dimen/px40"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <EditText
                android:id="@+id/ed_mark"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/bg_rectangle_gray"
                android:gravity="top"
                android:maxLength="200"
                android:padding="@dimen/px26"
                android:textColor="@color/black_sd1"
                android:textSize="@dimen/px35" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
