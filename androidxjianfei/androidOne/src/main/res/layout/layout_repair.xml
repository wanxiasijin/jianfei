<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/toolbar_sub" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/layout_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/px20"
                        android:background="@color/white_sd"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/px30"
                        android:paddingLeft="@dimen/px40"
                        android:paddingTop="@dimen/px30">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="废弃物种类"
                            android:textColor="@color/black_sd1"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_waste_types"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/px60"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:hint="请选择"
                            android:textColor="@color/black_sd1"
                            android:textColorHint="@color/black_sd2"
                            android:textSize="14dp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:src="@drawable/arrowdown" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="@dimen/px40"
                        android:background="@color/background_light" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white_sd"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/px10"
                        android:paddingLeft="@dimen/px40"
                        android:paddingTop="@dimen/px10">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="装载量"
                            android:textColor="@color/black_sd1"
                            android:textSize="14dp" />

                        <EditText
                            android:id="@+id/et_loading_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/px130"
                            android:layout_marginRight="@dimen/px40"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="请输入"
                            android:singleLine="true"
                            android:text="11"
                            android:inputType="number"
                            android:paddingBottom="@dimen/px20"
                            android:paddingTop="@dimen/px20"
                            android:textColor="@color/black_sd1"
                            android:textColorHint="@color/black_sd2"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_loading_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:text="立方/次"
                            android:textColor="@color/black_sd1"
                            android:textSize="14dp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="@dimen/px40"
                        android:background="@color/background_light" />

                    <LinearLayout
                        android:id="@+id/layout_vehicle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white_sd"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/px10"
                        android:paddingLeft="@dimen/px40"
                        android:paddingTop="@dimen/px10">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="车牌号"
                            android:textColor="@color/black_sd1"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_lisence"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/px130"
                            android:layout_marginRight="@dimen/px40"
                            android:layout_weight="1"
                            android:background="@null"
                            android:singleLine="true"
                            android:hint="请输入车牌号码"
                            android:paddingBottom="@dimen/px20"
                            android:paddingTop="@dimen/px20"
                            android:textColor="@color/black_sd1"
                            android:textColorHint="@color/black_sd2"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="@dimen/px40"
                        android:background="@color/background_light" />

                    <LinearLayout
                        android:id="@+id/layout_in"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white_sd"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/px30"
                        android:paddingLeft="@dimen/px40"
                        android:paddingTop="@dimen/px30">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="入场时间"
                            android:textColor="@color/black_sd1"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/time_in"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/px90"
                            android:layout_marginRight="@dimen/px40"
                            android:textColorHint="@color/black_sd2"
                            android:hint="请选择入场时间"
                            android:textColor="@color/black_sd1"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="@dimen/px40"
                        android:background="@color/background_light" />

                    <LinearLayout
                        android:id="@+id/layout_out"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white_sd"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/px30"
                        android:paddingLeft="@dimen/px40"
                        android:paddingTop="@dimen/px30">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="出场时间"
                            android:textColor="@color/black_sd1"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/time_out"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/px90"
                            android:layout_marginRight="@dimen/px40"
                            android:textColorHint="@color/black_sd2"
                            android:hint="请选择出场时间"
                            android:textColor="@color/black_sd1"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <include
                        layout="@layout/edit_order_details_start_end_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/px30"
                        android:paddingBottom="@dimen/px30"
                        android:background="@color/white_sd">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@color/white"
                            android:drawableLeft="@drawable/mark"
                            android:drawablePadding="@dimen/px20"
                            android:gravity="center_vertical"
                            android:paddingBottom="@dimen/px20"
                            android:paddingLeft="15dp"
                            android:text="备注"
                            android:textColor="@color/black_sd1"
                            android:textSize="14dp" />

                        <EditText
                            android:id="@+id/ed_mark"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/px200"
                            android:layout_marginLeft="@dimen/px25"
                            android:layout_marginRight="@dimen/px25"
                            android:gravity="top"
                            android:textColor="@color/black_sd1"
                            android:textSize="14dp"
                            android:padding="@dimen/px20"
                            android:background="@drawable/bg_coners_gray2"/>

                    </LinearLayout>

                    <include
                        layout="@layout/waybill_details_project_information_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp" />

                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_abnormal_report"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@color/white_sd"
                android:clickable="true"
                android:enabled="true"
                android:gravity="center"
                android:padding="@dimen/px30"
                android:text="@string/cancel"
                android:textColor="@color/black_sd1"
                android:textSize="16dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/btn_submit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/green_theam"
                android:gravity="center"
                android:padding="@dimen/px30"
                android:text="@string/submit"
                android:textColor="@color/white_sd"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
