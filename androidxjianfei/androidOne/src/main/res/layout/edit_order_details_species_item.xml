<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/px34"
    android:paddingTop="@dimen/px34">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_waste_types"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/waste_types"
                android:textColor="@color/text_51"
                android:textSize="@dimen/text_16" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/bg_coners_white"
                android:dropDownHorizontalOffset="8dp"
                android:dropDownVerticalOffset="35dp"
                android:padding="8dp"
                android:popupBackground="@drawable/btn_white_bg_nor"
                android:spinnerMode="dropdown" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="14dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_loading_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loading_amount"
                android:textColor="@color/text_51"
                android:textSize="@dimen/text_16" />

            <EditText
                android:id="@+id/et_loading_amount"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/bg_coners_white"
                android:inputType="number"
                android:paddingBottom="@dimen/px14"
                android:paddingLeft="@dimen/px8"
                android:paddingTop="@dimen/px14"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/text_63"
                android:textSize="@dimen/text_15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立方/次"
                android:textColor="@color/text_51"
                android:textSize="14dp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_number_plate1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="20dp"
        android:text=""
        android:textColor="@color/text_3384d5"
        android:textSize="@dimen/text_18"
        android:textStyle="bold" />
</LinearLayout>
